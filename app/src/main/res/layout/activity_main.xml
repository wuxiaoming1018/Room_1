<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_add_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加User记录"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_get_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询User记录"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_add_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加Book记录"
        android:textAllCaps="false" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:layout_width="0dp"
        android:onClick="deleteByIdBook"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="删除Book记录"
        android:textAllCaps="false" />
    <Button
        android:onClick="deleteByItemBook"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="删除Book记录"
        android:textAllCaps="false" />
</LinearLayout>


    <Button
        android:id="@+id/button_get_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询Book记录"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_add_mini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加Mini记录"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_get_mini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询Mini记录"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_delete_mini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除部分Mini记录" />

    <Button
        android:id="@+id/button_delete_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除全部Mini记录" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addStudent"
        android:text="新增student" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="queryStudent"
        android:text="查询所有student" />

</LinearLayout>